{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "lib": ["dom"],
    "baseUrl": ".",
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "allowJs": false,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
    "compilerOptions": {
      "jsx": "react-jsx",
      "jsxImportSource": ""
    }
  },
  "exclude": ["node_modules"]
}
