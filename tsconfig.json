{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["lib/**/*", "test/**/*", "types/**/*", "pages"],
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "allowJs": false,
    "incremental": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "exclude": ["node_modules"]
}
